import java.util.Scanner;
public class crearEquipos {
	
    static Scanner sc = new Scanner(System.in);
public static void crearEquipos(){

	//Declaración de variables para leer los datos de los coches
    String nombre;
    int vidas=200;
    int misiles=50;

    //Variable auxiliar que contendrá la referencia a cada coche nuevo.
    planeta aux;
    int i;
    int N;
    //se pide por teclado el número de coches a leer
    do {
        System.out.print("Número de equipos? ");
        N = sc.nextInt();
    } while (N < 0);
    sc.nextLine(); //limpiar el intro

    for (i = 1; i <= N; i++) {
        //leer datos de cada coche
        System.out.println("Equipo " + i);
        System.out.print("Nombre: ");
        nombre = sc.nextLine();          

        aux = new planeta(); //Se crea un objeto Coche y se asigna su referencia a aux                          

        //se asignan valores a los atributos del nuevo objeto
        aux.setNombre(nombre);
        aux.setVidas(vidas);
        aux.setMisiles_ronda(misiles);
                  
        //se añade el objeto al final del array
        planeta.add(aux);
    }
}
}
